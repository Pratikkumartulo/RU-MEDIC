<%- include("../boilerplate/boilerplate") %>
<body>
    <!-- Header Section -->
    <header>
        <h1>Healthcare Hub</h1>
        <nav>
            <ul>
                <li><a href="#find-hospital">Find Hospital Nearby</a></li>
                <li><a href="#blood-donor">Blood Donor Finder</a></li>
                <li><a href="#donate-blood">Donate Blood</a></li>
                <li><a href="#top-hospitals">Top Hospitals</a></li>
                <li><a href="#online-consult">Online Consultation</a></li>
                <li><a href="#book-appointment">Book Appointment</a></li>
                <li><a href="#hospital-services">Hospital Services</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main>
        <!-- Find Hospital Section -->
        <section id="find-hospital">
            <h2>Find Hospital Nearby</h2>
            <!-- Implement find hospital functionality -->
            <button id="find-hospital-btn">Find Nearby Hospitals</button>
        </section>

        <!-- Blood Donor Section -->
        <section id="blood-donor">
            <h2>Blood Donor Finder</h2>
            <!-- Implement blood donor finder functionality -->
            <button id="blood-donor-btn">Find Blood Donors</button>
        </section>

        <!-- Donate Blood Section -->
        <section id="donate-blood">
            <h2>Donate Blood</h2>
            <!-- Implement blood donation functionality -->
            <button id="donate-blood-btn">Donate Now</button>
        </section>

        <!-- Top Hospitals Section -->
        <section id="top-hospitals">
            <h2>Top Hospitals</h2>
            <!-- Display details of top reputed hospitals in cards -->
            <div class="hospital-card">
                <h3>Hospital Name 1</h3>
                <p>Address: Hospital Address 1</p>
                <p>Contact: Contact Number 1</p>
            </div>
            <div class="hospital-card">
                <h3>Hospital Name 2</h3>
                <p>Address: Hospital Address 2</p>
                <p>Contact: Contact Number 2</p>
            </div>
            <!-- Add more hospital cards as needed -->
        </section>

        <!-- Online Consultation Section -->
        <section id="online-consult">
            <h2>Online Doctor Consultation</h2>
            <!-- Implement online consultation functionality -->
            <button id="online-consult-btn">Consult Now</button>
        </section>

        <!-- Book Appointment Section -->
        <section id="book-appointment">
            <h2>Book Appointment</h2>
            <!-- Implement appointment booking functionality -->
            <button id="book-appointment-btn">Book Now</button>
        </section>

        <!-- Hospital Services Section -->
        <section id="hospital-services">
            <h2>Hospital Services</h2>
            <!-- Implement services availability functionality -->
            <p>Check the availability of OT, beds, and oxygen cylinders in hospitals.</p>
        </section>
    </main>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2024 Healthcare Hub. All rights reserved.</p>
    </footer>
</body>
</html>
