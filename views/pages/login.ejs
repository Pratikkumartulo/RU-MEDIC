<%- include("../boilerplate/boilerplate") %>
<link rel="stylesheet" href="/css/login.css">
<body>
    <div class="Login-box">
        <div class="loginbx">
            <form action="/" class="flex flex-column gap-3">
                <h2>Login</h2>
                <div class="col-6">
                    <input type="text" class="form-control" placeholder="Username" aria-label="First name">
                  </div>
                  <div class="col-6">
                    <input type="number" class="form-control" placeholder="Ph. Number" aria-label="Last name">
                </div>
                <button type="submit" class="btn btn-success">Log in</button>
            </form>
        </div>
    </div>
</body>