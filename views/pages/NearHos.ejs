<%- include("../boilerplate/boilerplate") %>
  <style>
    body {
    background: #dce1df;
    color: #4f585e;
    font-family: 'Source Sans Pro', sans-serif;
    text-rendering: optimizeLegibility;
}

a.btn-hos {
    background: #0096a0;
    border-radius: 4px;
    box-shadow: 0 2px 0px 0 rgba(0, 0, 0, 0.25);
    color: #ffffff;
    display: inline-block;
    padding: 6px 30px 8px;
    position: relative;
    text-decoration: none;
    transition: all 0.1s 0s ease-out;
}

.no-touch a.btn-hos:hover {
    background: lighten(#0096a0, 2.5);
    box-shadow: 0px 8px 2px 0 rgba(0, 0, 0, 0.075);
    transform: translateY(-2px);
    transition: all 0.25s 0s ease-out;
}

.no-touch a.btn-hos:active,
a.btn-hos:active {
    background: darken(#0096a0, 2.5);
    box-shadow: 0 1px 0px 0 rgba(255, 255, 255, 0.25);
    transform: translate3d(0, 1px, 0);
    transition: all 0.025s 0s ease-out;
}

div.cardbox {
    margin: 80px auto;
    max-width: 960px;
    text-align: center;
    z-index: 1;
}

div.crd-nearhos {
    background: #ffffff;
    display: inline-block;
    margin: 8px;
    max-width: 300px;
    perspective: 1000;
    position: relative;
    text-align: left;
    transition: all 0.3s 0s ease-in;
    width: 300px;
    z-index: 1;
}

div.crd-nearhos img {
    max-width: 300px;
}

div.crd-nearhos .card__image-holder {
    background: rgba(0, 0, 0, 0.1);
    height: 0;
    padding-bottom: 75%;
}

div.crd-nearhos .card-title {
    background: #ffffff;
    padding: 6px 15px 10px;
    position: relative;
    z-index: 0;
}

div.crd-nearhos .card-title a.toggle-info {
    border-radius: 32px;
    height: 32px;
    padding: 0;
    position: absolute;
    right: 15px;
    top: 10px;
    width: 32px;
}

div.crd-nearhos .card-title a.toggle-info span {
    background: #ffffff;
    display: block;
    height: 2px;
    position: absolute;
    top: 16px;
    transition: all 0.15s 0s ease-out;
    width: 12px;
}

div.crd-nearhos .card-title a.toggle-info span.left {
    right: 14px;
    transform: rotate(45deg);
}

div.crd-nearhos .card-title a.toggle-info span.right {
    left: 14px;
    transform: rotate(-45deg);
}

div.crd-nearhos .card-title h2 {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: -0.05em;
    margin: 0;
    padding: 0;
}

div.crd-nearhos .card-title h2 small {
    display: block;
    font-size: 18px;
    font-weight: 600;
    letter-spacing: -0.025em;
}

div.crd-nearhos .card-description {
    padding: 0 15px 10px;
    position: relative;
    font-size: 14px;
}

div.crd-nearhos .card-actions {
    box-shadow: 0 2px 0px 0 rgba(0, 0, 0, 0.075);
    padding: 10px 15px 20px;
    text-align: center;
}

div.crd-nearhos .card-flap {
    background: darken(#ffffff, 15);
    position: absolute;
    width: 100%;
    transform-origin: top;
    transform: rotateX(-90deg);
}

div.crd-nearhos .flap1 {
    transition: all 0.3s 0.3s ease-out;
    z-index: -1;
}

div.crd-nearhos .flap2 {
    transition: all 0.3s 0s ease-out;
    z-index: -2;
}

div.cardbox.showing div.crd-nearhos {
    cursor: pointer;
    opacity: 0.6;
    transform: scale(0.88);
}

.no-touch div.cardbox.showing div.crd-nearhos:hover {
    opacity: 0.94;
    transform: scale(0.92);
}

div.crd-nearhos.show {
    opacity: 1 !important;
    transform: scale(1) !important;
}

div.crd-nearhos.show .card-title a.toggle-info {
    background: #ff6666 !important;
}

div.crd-nearhos.show .card-title a.toggle-info span {
    top: 15px;
}

div.crd-nearhos.show .card-title a.toggle-info span.left {
    right: 10px;
}

div.crd-nearhos.show .card-title a.toggle-info span.right {
    left: 10px;
}

div.crd-nearhos.show .card-flap {
    background: #ffffff;
    transform: rotateX(0deg);
}

div.crd-nearhos.show .flap1 {
    transition: all 0.3s 0s ease-out;
}

div.crd-nearhos.show .flap2 {
    transition: all 0.3s 0.2s ease-out;
}

  </style>
  <body>
    <div class="Nearby-hos">
      <h1 class="Nearby-head" style="text-align: center;">Hospitals for <%= prob %>
      </h1>

    </div>
    <div class="cardbox">
      <% Object.keys(data).forEach((hospitaliName)=> { %>
        <% const bedNumber=data[hospitaliName].bed; %>
        <% const rattings=data[hospitaliName].rattings; %>
        <% const OT=data[hospitaliName].OT; %>
        <% const Distance=data[hospitaliName].Distance; %>
        <% const img=data[hospitaliName].img; %>
        <% const address=data[hospitaliName].address; %>
            <div class="crd-nearhos">
              <div class="card__image-holder">
                <img class="card__image" src=<%= img %> alt="wave" />
              </div>
              <div class="card-title">
                <a href="#" class="toggle-info btn-hos">
                  <span class="left"></span>
                  <span class="right"></span>
                </a>
                <h2>
                  <%=hospitaliName %>
                  <small><%= Distance %></small>
                </h2>
              </div>
              <div class="card-flap flap1">
                <div class="card-description">
                  <p class="starability-result" data-rating=<%= rattings %>>
									  </p>
                  <p>Bed:<%= bedNumber %></p>
                  <p>OT:<%= OT %></p>
                  <p>ADDRESS:<%= address %></p>
                  <form action="/docs/<%= hospitaliName %>">
                    <button type="submit" class="btn btn-success">See doctors</button>
                  </form>
                </div>
                <div class="card-flap flap2">
                  <div class="card-actions">
                    <a class="btn-hos">view less</a>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/js/Nearby.js"></script>
  </body>